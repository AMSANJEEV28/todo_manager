<p class="new_user_title"> Sign in </p>
<style>
    body {
      background-image: url(background_img1.jpg);
      background-size: 100%, 100%;
    }
  </style>
<div class="user_content">
<section class = "users_new">
  <%= form_with url: sessions_path do |form| %>

    <div class="form_section">
        <p class="input_label"> Email: </p>
        <%= form.email_field :email , class: "form_input"  %>
    </div>

    <div class="form_section">
        <p class="input_label"> Password: </p>
        <%= form.password_field :password , class: "form_input"  %>
    </div>

    <div class="form_section">
        <%= form.submit "Sign-In", class: "form_submit"%>
    </div>

  <% end %>
</section>
</div>